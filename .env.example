# ===========================================
# Paigent Studio Environment Variables
# ===========================================
# Copy this file to .env.local and fill in your values

# Node environment
NODE_ENV=development

# ===========================================
# Clerk Authentication
# ===========================================
# Get keys from: https://dashboard.clerk.com/
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_xxx
CLERK_SECRET_KEY=sk_test_xxx
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/dashboard
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/dashboard

# ===========================================
# MongoDB Atlas
# ===========================================
# Get connection string from: https://cloud.mongodb.com/
MONGODB_URI=mongodb+srv://<username>:<password>@cluster.xxxxx.mongodb.net/?retryWrites=true&w=majority
MONGODB_DB_NAME=paigent_studio

# ===========================================
# Coinbase CDP (Server Wallet v2)
# ===========================================
# Get credentials from: https://portal.cdp.coinbase.com/
CDP_API_KEY_ID=your_api_key_id
CDP_API_KEY_SECRET=your_api_key_secret
CDP_WALLET_SECRET=your_wallet_secret

# ===========================================
# Fireworks AI (LLM + ASR)
# ===========================================
# Get key from: https://app.fireworks.ai/
FIREWORKS_API_KEY=fw_xxx

# ===========================================
# VoyageAI (Embeddings) - Optional
# ===========================================
# Get key from: https://dash.voyageai.com/
VOYAGE_API_KEY=

# ===========================================
# Galileo (Observability) - Optional
# ===========================================
# Get key from: https://app.galileo.ai/
GALILEO_API_KEY=
GALILEO_PROJECT_ID=

# ===========================================
# Vercel Cron
# ===========================================
# Generate a random secret for cron endpoint authentication
CRON_SECRET=your_random_secret_here

# ===========================================
# Feature Flags
# ===========================================
# Enable/disable optional features
ENABLE_VOICE_INPUT=true
ENABLE_VECTOR_SEARCH=true
